option_settings:
  aws:elasticbeanstalk:application:environment:
    DJANGO_SETTINGS_MODULE: prjmgmt.settings
  aws:elasticbeanstalk:container:python:
    WSGIPath: prjmgmt.wsgi:application
    NumProcesses: 1
  aws:elasticbeanstalk:environment:proxy:staticfiles:
    /static: static
container_commands:
  collectstatic:
    command: "python manage.py collectstatic --noinput"
  makemigrations:
    command: "python manage.py makemigrations"
    leader_only: true
  migrate:
    command: "python manage.py migrate"
    leader_only: true
  createsuperuser:
    command: "echo 'from django.contrib.auth.models import User; User.objects.create_superuser(\"admin\", \"m.h.oreaba@gmail.com\", \"admin\")' | python manage.py shell"
    leader_only: true
  chmod_db:
    command: "chmod 777 /efs-adm-pm-db-prod/adm-pm.db.sqlite3"
    leader_only: true